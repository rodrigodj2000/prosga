{% extends 'RGVSiteBundle::template.html.twig' %}

{% block layout_head %}
                 
    {% stylesheets '@RGVDemoBundle/Resources/public/css/*' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    
    {% block page_head %}{% endblock %}
    
{% endblock %}

{% block layout_title %}
    {% block page_title %}{% endblock %} :: RGV Demo Bundle
{% endblock %}

{% block layout_content %}    
    
    {% block header %}{% endblock %}
    
    {% block page_content %}{% endblock %}
    
    {% block footer %}
        <div class="row">
            <div class="col-md-6 column">
                <a class="btn btn-primary btn-large" href="{{ path('rgv_demo_homepage') }}">Home</a>
                <a class="btn btn-primary btn-large" href="{{ path('sonata_user_security_login') }}">Ingreso</a>
                <a class="btn btn-primary btn-large" href="{{ path('sonata_user_registration_register') }}">Registro</a>
                <a class="btn btn-primary btn-large" href="{{ path('sonata_user_admin_security_login') }}">Administracion</a>            
            </div>
        </div>
    {% endblock %}
                
{% endblock %}
        