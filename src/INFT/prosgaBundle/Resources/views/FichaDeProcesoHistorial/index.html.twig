{% extends 'prosgaBundle::template.html.twig' %}

{% block content %}
    <h2> Historial de Cambios Fichas de Procesos</h2>
{% endblock %}

{% block body_content %} 
    <table class="table table-striped">
        <thead>
            <tr>
                <!--th> Id </th--!>
                <th> N° de Revisión </th>
                <th> Cambio del Proceso </th>
                <th> Fecha </th>                
                <th> Descripción </th>
                <th> Acciones </th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <!--td><a href="{{ path('fichadeprocesohistorial_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td--!>
                <td>{{ entity.nroRevision }}</td>
                <td><a href="{{ path('fichadeproceso_show', { 'id': entity.fichaDeProceso.id }) }}">{{ entity.fichaDeProceso }}</a></td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('d/m/Y') }}{% endif %}</td>
                <td>{% if entity.descripcion %}{{ entity.descripcion|bbcode_filter('filter_default') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('fichadeprocesohistorial_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('fichadeprocesohistorial_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fichadeprocesohistorial_new') }}">
                Agregar Nuevo
            </a>
        </li>
    </ul>
{% endblock %}
