{% extends 'prosgaBundle::template.html.twig' %}

{% block content %}
    <h2>Actividades</h2>
{% endblock %}

{% block body_content %}  

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Fecha</th>
                <th>Observacion</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('actividad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fechaActividad %}{{ entity.fechaActividad|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{{ entity.observacion }}</td>
                <td>{{ entity.nombre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('actividad_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('actividad_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('actividad_new') }}">
                Crear nueva Actividad
            </a>
        </li>
    </ul>
    {% endblock %}
