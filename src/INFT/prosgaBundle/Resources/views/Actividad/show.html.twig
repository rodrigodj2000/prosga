{% endblock %}

{% block body_content -%}

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.fechaActividad|date('Y-m-d H:i') }}</td>
            </tr>
            <tr>
                <th>Observaci√≥n</th>
