{% extends '::base.html.twig' %}

{% block page_title %}{% endblock %}

{% block body %}

    <div class="container site">

      <!-- Static navbar -->
      <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{ path('prosga_homepage') }}">ProSGA</a>
        </div>
        <div class="navbar-collapse collapse">            
          <ul class="nav navbar-nav">       
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <li><a href="{{ path('auditoria') }}">Auditoría</a></li>
            <li><a href="{{ path('actividad') }}">Actividades</a></li>
              <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="">Fichas de Proceso <b class="caret"></b></a>
              <ul class="dropdown-menu">
                  <li><a href="{{ path('fichadeproceso') }}">Listar</a></li>
                  <li><a href="{{ path('fichadeprocesoentrada') }}">Entradas</a></li>
                  <li><a href="{{ path('fichadeprocesosalida') }}">Salidas</a></li>
                  <li><a href="{{ path('fichadeprocesohistorial') }}">Historial</a></li>
              </ul>
              </li>
              <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="">Indicadores <b class="caret"></b></a>
              <ul class="dropdown-menu">
                  <li><a href="{{ path('tiposincidencias') }}">Lista de Indicadores</a></li>
                  <li><a href="{{ path('incidencias') }}">Cargar Incidencias</a></li>                  
              </ul>
              </li>
              <li><a href="{{ path('acciones') }}">Acciones</a></li>
            {% endif %}            
            <li><a href="{{ path('prosga_acercade') }}">Acerca de...</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <li><a href="{{ path('sonata_admin_dashboard') }}" target="_blank">Administración
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                    </a></li>
                <li class="active"><a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                </a></li>              
                {% else %}
                <li class="active"><a href="{{ path('fos_user_security_login') }}">Ingresar
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span></a></li>
            {% endif %}              
          </ul>
        </div><!--/.nav-collapse -->
      </div>

      <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron">
        <p>
            {% block content %}{% endblock %}
        <p>          
      </div>
    </div> <!-- /container -->

    <div class="container site">{% block body_content %}{% endblock %}</div>    

    <footer class="footer">
        <div class="container">
            <p class="text-muted">FONSOFT - ANR FONSOFT 2011 - Proyecto NA 117/11 - <a href="http://inft.com.ar/" target="_blank">INFT S.A.</a></p>            
        </div>        
    </footer>
    
{% endblock %}

{% block body_end_before_js %}
    {{ tinymce_init() }}
{% endblock %}