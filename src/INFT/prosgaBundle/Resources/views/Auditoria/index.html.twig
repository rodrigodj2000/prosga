{% extends 'prosgaBundle::template.html.twig' %}

{% block content %}
    <h2>Auditor√≠as</h2>
{% endblock %}

{% block body_content %}    

    <table class="table table-striped">
        <thead>
            <tr>
                <th> Nombre </th>
                <th> Fecha </th>
                <th> Sector </th>
                <th> Responsable </th>
                <th> Estado </th>
                <th> Costo </th>                
                <th> Acciones </th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <!--td><a href="{{ path('auditoria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td--!>
                <td>{{ entity.nombre }}</td>
                <td>{% if entity.fechaDeAuditoria %}{{ entity.fechaDeAuditoria|date('d/m/Y') }}{% endif %}</td>
                <td>{{ entity.sector }}</td>
                <td>{{ entity.personaResponsable}}</td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.costoAuditoria|number_format }}</td>
                                
                <td>
                <ul>
                    <li>
                        <a href="{{ path('auditoria_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('auditoria_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('auditoria_new') }}">
                Agregar Nuevo
            </a>
        </li>
    </ul>
    {% endblock %}
