{% extends 'prosgaBundle::template.html.twig' %}

{% block content %}
    <h2>Ver Auditor√≠a</h2>
{% endblock %}

{% block body_content -%}

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.fechaDeAuditoria|date('d/m/Y H:i') }}</td>
            </tr>
            <tr>
                <th>Costo</th>
                <td>{{ entity.costoAuditoria|number_format }}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ entity.observacion }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('auditoria') }}">
            Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('auditoria_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
